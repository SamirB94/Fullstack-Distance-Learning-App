<%include ../partials/header%>
    <div class="ui container">
        <form action="/user" method="POST" class="ui-form">
            <div class="field">
                <label for="firstName">Ime</label>
                <input type="text" name="newUser[firstName]" id="firstName">
            </div> 
            <div class="field">
                <label for="lastName">Prezime</label>
                <input type="text" name="newUser[lastName]" id="lastName">
            </div>
            <div class="field">
                <label for="birthDate">Datum rođenja</label>
                <input type="date" name="newUser[birthDate]" id="birthDate">
            </div>
            <div class="field">
                <label for="streetNum">Ulica</label>
                <input type="text" name="newUser[streetName]" id="streetName">
            </div>
            <div class="field">
                <label for="streetNum">broj</label>
                <input type="number" name="newUser[streetNum]" id="streetNum">
            </div>
            <div class="field">
                <label for="postNum">Poštanski broj</label>
                <input type="number" name="newUser[postNum]" id="postNum">
            </div>
            <div class="field">
                <label for="municipality">Opština</label>
                <input type="text" name="newUser[municipality]" id="municipality">
            </div>
            <div class="field">
                <label for="city">Grad</label>
                <input type="text" name="newUser[city]" id="city">
            </div>
            <div class="field">
                <label for="country">Država</label>
                <input type="text" name="newUser[country]" id="country">
            </div>
            <div class="field">
                <label for="phoneNum">Broj tel.</label>
                <input type="tel" name="newUser[phoneNum]" id="phoneNum">
            </div>
            <div class="field">
                <label for="email">E-mail</label>
                <input type="email" name="newUser[email]" id="email">
            </div>
            <input type="submit" value="Pošalji">
        </form>
    </div>
<%include ../partials/footer%>